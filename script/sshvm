#!/bin/sh

print_help(){
  echo "========================="
  echo "This is package manager for ssh keys!\n"
  echo "Type the one of following commands:"
  echo "sshvm list - listing the available packages"
  echo "========================="
}

print_list(){
  for dir in `find ~/.sshvm/packages -maxdepth 1 -mindepth 1 -type d ` 
  do
    echo "$dir"
  done
}

case $1 in
  "list") print_list;;
  "help"|*) print_help ;;
esac

